{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "target": "es2015",
        "strict": true,
        "pretty": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
